          "progression": "Add weight when completing 3x12 with good form"
        },
        {
          "exercise": "Push-ups (modified as needed)",
          "sets": 3,
          "reps": "5-15",
          "weight": "bodyweight",
          "rest_seconds": 90,
          "notes": "Use knees or incline if needed",
          "progression": "Progress to full push-ups, then add reps"
        },
        {
          "exercise": "Bent-over Dumbbell Row",
          "sets": 3,
          "reps": "8-12",
          "weight": "15-25lbs per dumbbell",
          "rest_seconds": 120,
          "notes": "Hinge at hips, squeeze shoulder blades",
          "progression": "Increase weight when completing 3x12"
        },
        {
          "exercise": "Dumbbell Shoulder Press",
          "sets": 3,
          "reps": "8-12",
          "weight": "10-20lbs per dumbbell",
          "rest_seconds": 120,
          "notes": "Press straight up, avoid arching back",
          "progression": "Increase weight gradually"
        },
        {
          "exercise": "Plank",
          "sets": 3,
          "reps": "20-60 seconds",
          "weight": "bodyweight",
          "rest_seconds": 60,
          "notes": "Maintain straight line from head to heels",
          "progression": "Increase hold time weekly"
        }
      ],
      "cool_down": [
        {
          "exercise": "Static Stretching",
          "duration": "5-10 minutes",
          "description": "Hip flexors, hamstrings, chest, shoulders"
        }
      ]
    },
