        {
          "exercise": "Side Plank",
          "sets": 2,
          "reps": "15-45 seconds per side",
          "weight": "bodyweight",
          "rest_seconds": 60,
          "notes": "Modified on knees if needed",
          "progression": "Increase hold time"
        }
      ],
      "cool_down": [
        {
          "exercise": "Full Body Stretching",
          "duration": "10 minutes",
          "description": "Comprehensive stretching routine"
        }
