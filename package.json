{
  "name": "persuader",
  "version": "0.1.1",
  "type": "module",
  "description": "Session-based LLM orchestration with validation-driven retry loops and guaranteed schema-adhering output.",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "persuader": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "build:legacy": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "jest",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "lint:legacy": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "example:fitness": "tsx examples/fitness-analysis/index.ts",
    "example:fitness:compare": "tsx examples/fitness-analysis/examples/compare-perspectives.ts",
    "example:yoga": "tsx examples/yoga/index.ts",
    "example:yoga-advanced": "tsx examples/yoga-advanced/index.ts",
    "example:exercise": "tsx examples/exercise/index.ts",
    "example:workout": "tsx examples/workout-generator/index.ts",
    "example:workout:optimized": "tsx examples/workout-generator/optimized.ts"
  },
  "keywords": [
    "llm",
    "ai",
    "zod",
    "validation",
    "pipeline",
    "orchestration",
    "typescript",
    "session-based",
    "batch-processing",
    "data-enrichment",
    "type-safe"
  ],
  "author": "Conor Luddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conorluddy/Persuader.git"
  },
  "bugs": {
    "url": "https://github.com/conorluddy/Persuader/issues"
  },
  "homepage": "https://github.com/conorluddy/Persuader#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^30.1.3",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "consola": "^3.4.2",
    "fast-glob": "^3.3.3",
    "ora": "^8.2.0",
    "zod": "^4.1.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
